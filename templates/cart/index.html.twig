{% extends 'base.html.twig' %}

{% block title %}panier{% endblock %}

{% block body %}
<div class="container my-5">
    <h1>Mon Panier</h1>

    <div class="row">
        <div class="col-md-8">
         

            {% for monproduit in cart %}
                <div class="row mb-3 align-items-center border p-2 rounded shadow-sm">
                    <div class="col-md-2">
                        <img src="/uploads/{{ monproduit.object.illustration }}" class="img-fluid rounded" alt="{{ monproduit.object.name }}">
                    </div>
                    <div class="col-md-6">
                        <strong>{{ monproduit.object.name }}</strong>
                        <span class="d-block">{{ monproduit.object.PriceWt|price }}</Span>
                    </div>
                    <div class="col-md-2">
                        <a href="{{ path('app_cart_decrease', {'id':monproduit.object.id})}}">➖</a>  <span class="badge text-bg-secondary" > x{{ monproduit.qte }}</span>
<a href="{{path('app_cart_add', {'id':monproduit.object.id})}}">➕</a>
                    </div>
                    <div class="col-md-2">
                       <strong>{{ (monproduit.qte * monproduit.object.PriceWt)|price }}</strong>
                    </div>
                </div>
            {% endfor %}
        <a href="{{path('app_cart_remove')}}" class="btn btn-danger">Supprimer le panier</a>
        </div>
        <div class="col-md-4">
         <div class="bg-light p-3">
            <div class="d-flex justify-content-between">
           <span class="fw-bold">Total produit</span>
           <span class="fw-bold">{{fullQuantity}}</span>
            </div>

            <div class="d-flex justify-content-between mt-3">
                <span class="fw-bold">Prix Total TTC</span>
                <span class="fw-bold">{{totalwt|price}}</span>
                 </div>
                 <div>
               <a href="#"" class="btn btn-success w-100 mt-3">Commander</a>
                 </div>

         </div>
        </div>
    </div>
</div>
{% endblock %}